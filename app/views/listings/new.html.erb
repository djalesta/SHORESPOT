<%= simple_form_for @listing do |f| %>
  <%= f.input :description, as: :text %>
  <%= f.input :price_per_hour, label: "Price per Hour ($)", input_html: { type: :number, min: 0 } %>
  <%= f.input :spot_column, label: "Spot Column", input_html: { type: :number, min: 0 } %>
  <%= f.input :spot_row, label: "Spot Row", input_html: { type: :number, min: 0 } %>
  <%= f.submit "Create Listing" %>
<% end %>
