<div class="container py-2">
  <div class="row mb-3">
    <div class="col-12">
      <div class="p-3 bg-white rounded-3 shadow-sm mx-auto" style="width: 100%">
        <label for="date" class="form-label fw-semibold">Date</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
    </div>
  </div>
</div>


<div class="text-center p-2 mb-2">
  <%= image_tag "beach-img.jpg", alt: "An image of the spot on the beach", class: "img-fluid custom-rounded w-80" %>
</div>



<h2 class="p-2">$<%= @listing.price_per_hour %> per hour</h2>


<div class="text-center border border-primary rounded mt-4 p-4">
  <h3 class="mb-4"><%= @listing.description %></h3>
  <%= link_to "Book me", "#", class:"primarybuttonblue" %>
</div>
