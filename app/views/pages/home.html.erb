  >
    <div class="umbrella-scroll-wrapper" style="overflow-x: auto; width: 100%;">
      <div
        id="umbrella-container"
        class="d-flex flex-column align-items-start"
        style="min-width:900px; margin-left: auto; margin-right: auto;"
      >
        <% 4.times do |row| %>
          <div class="d-flex flex-row mb-2">
            <% 50.times do |col| %>
              <% index = row * 50 + col %>
              <% reserved = [3, 7, 13, 21, 33, 55, 70, 82, 99, 101, 112, 121, 134, 151, 163, 188].include?(index) %>
              <% selectable = !reserved %>
              <% umbrella_class = reserved ? "bg-danger" : "bg-success" %>
              <div
                class="umbrella-box d-flex align-items-center justify-content-center me-1 mb-1 rounded-circle <%= umbrella_class %>"
                data-selectable="<%= selectable %>"
                data-row="<%= row + 1 %>"
                data-col="<%= col + 1 %>"
                style="width: 28px; height: 28px; cursor: <%= selectable ? 'pointer' : 'not-allowed' %>; border: 2px solid #fff;"
              >
                <img src="<%= asset_path('umbrella.png') %>" width="15" height="15" alt="umbrella">
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div id="selected-info" class="text-center fw-semibold mt-3" style="font-size:1.1rem;"></div>
  </div>
</div>


<script>
document.addEventListener("DOMContentLoaded", function() {
  let selectedBox = null;
  let info = document.getElementById('selected-info');
  document.querySelectorAll('.umbrella-box').forEach(box => {
    if (box.dataset.selectable === "true") {
      box.addEventListener('click', function() {

        if (this.classList.contains('bg-warning')) {
          this.classList.remove('bg-warning');
          this.classList.add('bg-success');
          info.textContent = "";
          selectedBox = null;
        } else {

          document.querySelectorAll('.umbrella-box.bg-warning').forEach(sel => {
            sel.classList.remove('bg-warning');
            sel.classList.add('bg-success');
          });

          this.classList.remove('bg-success');
          this.classList.add('bg-warning');
          info.textContent = "Selected: Row " + this.dataset.row + ", Column " + this.dataset.col;
          selectedBox = this;
        }
      });
    }
  });
});

</script>

