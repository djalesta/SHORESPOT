<%= simple_form_for [@listing, @booking] do |f| %>
  <%= f.input :date, as: :string, input_html: {type: "date", class: "form-control",min: Date.today, value: params[:date] || Date.today.strftime("%Y-%m-%d")} %>

  <%= f.input :start_hour, collection: ([Time.now.hour, 10].max..20).map { |h| ["#{h}:00", h] }, prompt: 'Select starting time for booking' %>

  <%= f.input :duration, collection: (1..5).map { |h| ["#{h} hour#{'s' if h > 1}", h] }, prompt: 'Select duration of booking' %>

  <%= f.button :submit, "Book spot", class: "primarybuttonblue" %>
<% end %>
